<%- contentFor('body') %>
<h2>Update Courses</h2>
<form method="POST" action="/courses/update/<%=course.id%>" enctype="multipart/form-data">
        <div class="row">
          <div class="col">
            <label for="">Course Title</label>
            <input type="text" name="title" class="form-control" placeholder="Coure Title" value="<%=course.title%>"/>
          </div>
          <div class="col">
              <label for="">Price</label>
            <input type="number" name="price" class="form-control" placeholder="Price in number" value="<%=course.price%>"/>
          </div>
        </div>
        <div class="form-group">
            <label for="price">Subjects</label>
            <input type="text" name="subject" class="form-control" placeholder="subject by comma separted" value="<%=course.subject%>"/>
        </div>
        <div class="row">
                <div class="col">
                  <label for="">Start Date</label>
                  <input type="date" name="start_date" class="form-control" placeholder="Start Date" value="<%=course.start_date%>"/>
                </div>
                <div class="col">
                    <label for="">Duration</label>
                  <input type="text" name="duration" class="form-control" placeholder="Course Duration" value="<%=course.duration%>"/>
                </div>
              </div>
        <div class="form-group">
            <label for="">Course Detail</label>
            <textarea name="desr" class="form-control" placeholder="Long Descr"><%=course.desr%></textarea>
        </div>
        <div class="form-group">
                <label for="exampleFormControlFile1">Choose Image</label>
                <input type="file" name="pimg" class="form-control-file" id="exampleFormControlFile1">
              </div>
      
      <div class="form-group">
          <input type="submit" class="btn btn-outline-primary" value="update course"/>
          <input type="reset" class="btn btn-outline-warning" value="reset value" />
          <a href="/courses" class="btn btn-outline-danger">cancel</a>
      </div>
    </form>
