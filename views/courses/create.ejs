<%- contentFor('body') %>
<h2>Create New Courses</h2>
<% if(errors) { %>
    <% for(var i=0;i< errors.length;i++) { %>
        <p class="alert alert-danger"><%=errors[i].msg %></p>
     <% } %>
 <% } %>
<form method="POST" action="/courses/create" enctype="multipart/form-data">
        <div class="row">
          <div class="col">
            <label for="">Course Title</label>
            <input type="text" name="title" class="form-control" placeholder="Coure Title" required>
            <div class="valid-feedback">
                    Please choose a username.
            </div>
          </div>
          <div class="col">
              <label for="">Price</label>
            <input type="number" name="price" class="form-control" placeholder="Price in number">
          </div>
        </div>
        <div class="form-group">
            <label for="price">Subjects</label>
            <input type="text" name="subject" class="form-control" placeholder="subject by comma separted"/>
        </div>
        <div class="row">
                <div class="col">
                  <label for="">Start Date</label>
                  <input type="date" name="start_date" class="form-control" placeholder="Start Date">
                </div>
                <div class="col">
                    <label for="">Duration</label>
                  <input type="text" name="duration" class="form-control" placeholder="Course Duration">
                </div>
              </div>
        <div class="form-group">
            <label for="">Course Detail</label>
            <textarea name="desr" class="form-control" placeholder="Long Descr"></textarea>
        </div>
        <div class="form-group">
                <label for="exampleFormControlFile1">Choose Image</label>
                <input type="file" name="pimg" class="form-control-file" id="exampleFormControlFile1">
              </div>
      
      <div class="form-group">
          <input type="submit" class="btn btn-outline-primary" value="create course"/>
          <input type="reset" class="btn btn-outline-warning" value="clear value" />
          <a href="/courses" class="btn btn-outline-danger">cancel</a>
      </div>
    </form>